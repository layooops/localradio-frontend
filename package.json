{
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/config/*"
  ],
  "name": "local-radio",
  "author": {
    "name": "Vitalii Astakhov",
    "email": "vitalastakhov@gmail.com"
  },
  "devDependencies": {
    "prettier": "3.1.0",
    "turbo": "1.10.16"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --no-cache --continue",
    "dev:apps": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier -c .",
    "format:fix": "prettier -w ."
  },
  "packageManager": "yarn@3.6.1",
  "engines": {
    "node": ">=16.16.0",
    "npm": "please-use-yarn",
    "yarn": ">=1.22.0"
  }
}
