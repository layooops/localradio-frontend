{
  "kind": "collectionType",
  "collectionName": "shop_items",
  "info": {
    "singularName": "shop-item",
    "pluralName": "shop-items",
    "displayName": "Shop Item",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid"
    },
    "shop_category": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::shop-category.shop-category"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": ["images"]
    },
    "soldout": {
      "type": "boolean",
      "default": false
    },
    "quantity": {
      "type": "integer",
      "min": 0
    },
    "price": {
      "type": "integer",
      "required": true,
      "min": 0
    },
    "description": {
      "type": "richtext"
    },
    "attributes": {
      "type": "json"
    },
    "oldPrice": {
      "type": "integer",
      "min": 0
    }
  }
}
