{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/next-pages/*": ["./pages/*"],
      "@/public/*": ["./public/*"],
      "@/icons/*": ["./public/icons/*"],
      "@/fonts/*": ["./public/fonts/*"],
      "@local-radio/ui/*": ["../../packages/ui/src/*"],
      "@local-radio/ui": ["../../packages/ui/src/index"]
    },
    "noErrorTruncation": true,
    "incremental": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      },
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "./pages",
    "jest.setup.js",
    "next-sitemap.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
